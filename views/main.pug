extends layout

block content
 main(role='main')
  #uploadModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='uploadModalTitle', aria-hidden='true')
    form(method='post', action="/upload" enctype='multipart/form-data')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#uploadModalTitle.modal-title Choose file
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span.fas.fa-window-close(aria-hidden='true')
          .modal-body
              .input-group.mb-3
                .custom-file
                  input#inputGroupFile02.custom-file-input(type='file')
                  label.custom-file-label(for='inputGroupFile02', aria-describedby='inputGroupFileAddon02') Choose file
                .input-group-append                  
          .modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Upload