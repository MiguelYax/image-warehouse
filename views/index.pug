extends layout

block content
  main(role='main')
    .album.py-5
      .container
        .row
          .col-md-4
            .card.mb-4.box-shadow
              img.card-img-top(data-src='' alt='')
              .card-body
                p.card-text
                .d-flex.justify-content-between.align-items-center
                  .btn-group
                    button.btn.btn-sm.btn-outline-secondary(type='button' data-toggle="tooltip" data-placement="top" title="View")
                      i.fas.fa-eye
                    button.btn.btn-sm.btn-outline-secondary(type='button' data-toggle="tooltip" data-placement="top" title="Edit")
                      i.fas.fa-edit
                    button.btn.btn-sm.btn-outline-secondary(type='button' data-toggle="tooltip" data-placement="top" title="Remove")
                      i.fas.fa-trash
                  //- small.text-muted 9 mins
  footer.footer.fixed-bottom
    .container.fixed-bottom
      p.float-right
        a(href='#') Back to top
      p
